{
  "name": "good-job-games-backend-challenge",
  "version": "0.1.0",
  "description": "good-job-games-backend-challenge",
  "main": "index.js",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\" --onFailure \"echo Compilation Failed\" --compiler typescript/bin/tsc",
    "build": "tsc --build tsconfig.json",
    "test": "jest --coverage --verbose",
    "typecheck": "echo \"type-checking...\" && tsc --noEmit",
    "typeorm": "yarn build && ts-node ./node_modules/.bin/typeorm",
    "heroku-postbuild": "yarn build && yarn typeorm migration:run",
    "prod": "node ./dist/server.js"
  },
  "author": "brkn",
  "license": "MPL-2.0",
  "engines": {
    "node": "10.x"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck",
      "pre-push": "npm run typecheck"
    }
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jsdom": "16.1.0",
    "@types/jsonwebtoken": "8.3.9",
    "@types/morgan": "1.9.0",
    "@types/node": "^13.1.1",
    "@types/uuid": "8.0.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "ts-node": "8.9.1",
    "tsc-watch": "^4.0.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "axios": "0.19.2",
    "bcrypt": "4.0.1",
    "body-parser": "^1.19.0",
    "cheerio": "1.0.0-rc.3",
    "class-validator": "0.11.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "3.22.0",
    "jsonwebtoken": "9.0.0",
    "morgan": "1.9.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.22",
    "uuid": "^8.1.0"
  }
}
